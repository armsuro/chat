{
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": '2018',
    "sourceType": "module"
  },
  "plugins": [
    "babel"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "strict": [2, "never"],
    "require-jsdoc": 0,
    "no-invalid-this": 0,
    "max-len": [1, 160],
    "object-curly-spacing": ["error", "always"],
    "babel/new-cap": 1,
    "no-await-in-loop": 1,
    "no-console": ["error", { allow: ["warn", "error", "debug"] }]
  }
}
